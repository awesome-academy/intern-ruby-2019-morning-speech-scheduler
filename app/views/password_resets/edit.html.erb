<%= provide :title, t(".title") %>
<div class = "container page-login">
  <div class = "row">
    <div class = "col-md-4 col-md-offset-4">
      <div class = "login-form-wrap">
        <h1><%= t ".title" %></h1>
        <%= form_for @user, url: password_reset_path(params[:id]), html: {class: "login-form"} do |f| %>

          <%= render "shared/error_messages", object: f.object %>

          <%= hidden_field_tag :email, @user.email %>

          <%= f.label :password, t(".password") %>
          <%= f.password_field :password, class: "form-control", placeholder: t(".pl_password") %>

          <%= f.label :password_confirmation, t(".confirmation") %>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(".pl_confirmation") %>

          <%= f.submit t(".submit"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
